[core]
    autocrlf = input
    eol = lf
    editor = nvim

[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    lg = log --oneline --graph --all
    ; lg = log --pretty=format:'%an committed %h'

[init]
    defaultBranch = main

[diff]
    tool = nvim

[difftool "nvim"]
    cmd = "nvim -d $LOCAL $REMOTE"
